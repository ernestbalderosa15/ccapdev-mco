{{>header_nav}}

<div class="container" id="feed-main">
    <div class="row justify-content-between">
        <!-- Left column -->
        {{>sidenav}}
        <div class="col-8">
            <div class="form-container-box-feed mb-3">
                <div class="form-content-feed">
                    <!-- Back Button -->
                    <a href="./" class="form-back-button">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>

                    <!-- Create Post Form -->
                    <h1>Create a Post</h1>
                    <form id="post-form" class="form-post-form" method="post">
                        <!-- Title -->
                        <!-- PLS FIX THIS FORM, IDs are the same! @Myrine -->
                        <label for="post-title">Title:</label>
                        <input type="text" id="post-title" name="title" required />

                        <!-- Body -->
                        <label for="post-body">Body:</label>
                        <!-- Rich text editor-->
                        <div id="editor"></div>
                        <input type="text" id="post-body" name="edit-about-me" required />
                        {{!-- <script>
                          //ClassicEditor.create(document.querySelector("#editor"))
                            //.then((editor) => {
                              //console.log(editor);
                            })
                            //.catch((error) => {
                              //console.error(error);
                            });
                        </script> --}}
                    </form>
                    <div class="wrapper">
                        <i class="bi bi-tags-fill px-2"></i>Tags
                        <div class="tags">
                            <p>Press enter or add a comma after each tag</p>
                            <ul>
                                <input type="text" spellcheck="false" />
                            </ul>
                        </div>
                        <div class="details">
                            <p><span>10</span> tags are remaining</p>
                            <button>Remove All</button>
                        </div>
                    </div>
                    <button
                        type="button"
                        class="form-post-form-button"
                        onclick="window.location.href='/'"
                    >
                        Submit Post
                    </button>
                </div>
            </div>
        </div>

        <div class="col-2"></div>
    </div>
</div>

