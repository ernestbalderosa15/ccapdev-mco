{{!-- layouts/profile-layout.hbs --}}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - The Forum</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.ckeditor.com/ckeditor5/29.0.0/classic/ckeditor.js"></script>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css"></head>
<body>
    {{> header}}

    <main class="container">
        <div class="columns profile-columns">
            <div class="left-column">
                <!-- User info -->
                <div class="profile-box">
                    <img src="{{user.profilePicture}}" alt="{{user.username}}" class="avatar">
                    <h2>{{user.username}}</h2>
                    <p>Posts: {{user.numberOfPosts}}</p>
                    {{#unless isOwnProfile}}
                        <button class="btn-primary">Add Friend</button>
                    {{/unless}}
                </div>

                <!-- Navigation -->
                <div class="profile-box">
                    <nav>
                        <ul>
                            <li><a href="#about"><span class="material-icons">person</span> About</a></li>
                            <li><a href="#posts"><span class="material-icons">article</span> Posts</a></li>
                            <li><a href="#comments"><span class="material-icons">comment</span> Comments</a></li>
                        </ul>
                    </nav>
                </div>
            </div>

            <section class="middle-column">
                {{{body}}}
            </section>

            <div class="right-column">
                <!-- Friends list -->
                <div class="profile-box">
                    <h2>Friends</h2>
                    <ul class="friends-list">
                        {{#each user.friends}}
                            <li>
                                <img src="{{this.profilePicture}}" alt="{{this.username}}" class="avatar small">
                                <span class="username">{{this.username}}</span>
                            </li>
                        {{/each}}
                    </ul>
                </div>

                <!-- Tags list -->
                <div class="profile-box">
                    <h2>Tags</h2>
                    <div class="tags-list">
                        {{#each user.savedTags}}
                            <span class="tag">{{this}}</span>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>